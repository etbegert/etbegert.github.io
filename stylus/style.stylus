   background-color: #fff
   color: white 

h1
   margin:auto

.row
   text-align:center
   
.top
   margin-top: 1em

.topcenter
   border-radius: 0 35% 0 35%
   background-color: #DFC53C
   font-family: Aclonica

.clock {
	/*background-color: #111111;*/
	position: absolute;
	width: 20em;
	height: 20em;
	margin-left: -10em;
	margin-top: -10em;
	border: 0.25em solid teal;
	border-radius: 50%;
	animation: rotation 36s linear infinite;
}

.clock:after {
	content: "";
	width: 101%;
	height: 101%;
	margin-left: -9px;
	margin-top: -9.5px;
	position: absolute;
	border-radius: 50%;
	border: 0.5em solid teal;
	border-right-color: transparent;
	border-left-color: transparent;
	animation: rotation 20s linear infinite;
}

@keyframes rotation {
	from {
		transform: rotateZ(360deg);
	}
	to {
		transform: rotateZ(0deg);
	}
}

.tick {
	width: 1em;
	height: 1em;
	/*background-image: linear-gradient(teal 30%, grey 45%, black 60%, black 90%, black 100%);*/
	position: absolute;
	left: 50%;
	top: 50%;
	font-size: 0.8em;
	color: charcoal;
}


