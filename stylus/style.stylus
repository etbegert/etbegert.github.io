.inner {
	width: 3em;
	height: 3em;
	border-radius: 50%;
	border: 0.25em solid aquamarine;
	position: absolute;
	transform: translate-3d(-50%, 0px, 50px);
	left: 50%;
	top: 50%;
	margin-left: -1.5em;
	margin-top: -1.5em;
	animation: rotation 10s linear infinite;
}
.inner:after {
	content: "";
	position: absolute;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	left: -8px;
	top: -8px;
	border: 0.5em solid aquamarine;
	border-top-color: transparent;
	border-bottom-color: transparent;
	animation: rotation 2s linear infinite;
}


figure {
	background-color: black;
	color: red;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%) rotateX(-25deg) rotateY(-30deg);
	transform-style: preserve-3d;
	transition: 3s ease all;
}
figure:hover {
	transform: rotateX(0deg) rotateY(0deg);
}
